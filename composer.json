{
  "name": "kelvinkurniawan/lightorm",
  "description": "A lightweight, modern ORM for PHP with Active Record pattern, query builder, soft deletes, and advanced features",
  "type": "library",
  "keywords": ["orm", "database", "activerecord", "php", "mysql", "query-builder"],
  "homepage": "https://github.com/kelvinkurniawan/lightorm",
  "license": "MIT",
  "authors": [
    {
      "name": "Kelvin Kurniawan",
      "email": "kelvin@example.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/kelvinkurniawan/lightorm/issues",
    "source": "https://github.com/kelvinkurniawan/lightorm"
  },
  "autoload": {
    "psr-4": {
      "KelvinKurniawan\\LightORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KelvinKurniawan\\LightORM\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
